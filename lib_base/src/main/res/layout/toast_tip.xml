<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_blue_shape"
    android:gravity="center"
    android:minWidth="130dp"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_toast_tip"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="@dimen/dp_size_40"
        android:layout_height="@dimen/dp_size_40"
        android:layout_marginTop="@dimen/dp_size_20"
        android:contentDescription="@null"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_toast_text"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_8"
        android:layout_marginBottom="@dimen/dp_size_12"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>