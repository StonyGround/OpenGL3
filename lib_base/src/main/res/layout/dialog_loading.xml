<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_blue_shape"
    android:gravity="center"
    android:minWidth="130dp"
    android:orientation="vertical"
    android:padding="10dp">

    <!--<com.leer.lib.widget.LVCircularRing-->
    <!--android:id="@+id/lvcr_loading"-->
    <!--android:layout_width="30dp"-->
    <!--android:layout_height="30dp"-->
    <!--android:layout_marginTop="10dp" />-->
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avl_loading"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="@dimen/dp_size_40"
        android:layout_height="@dimen/dp_size_40"
        android:layout_marginTop="@dimen/dp_size_10"
        android:visibility="visible"
        app:indicatorName="BallSpinFadeLoaderIndicator" />

    <TextView
        android:id="@+id/loading_text"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_8"
        android:layout_marginBottom="@dimen/dp_size_12"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>