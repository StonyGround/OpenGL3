<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--下拉 上拉刷新控件-->
    <declare-styleable name="PullToRefreshLayout">
        <attr name="view_error" format="reference" />
        <attr name="view_empty" format="reference" />
        <attr name="view_loading" format="reference" />
    </declare-styleable>

    <!--水平滑动Tab自定义属性-->
    <declare-styleable name="PagerSlidingTabStrip">
        <!--下方 指示线条器颜色-->
        <attr name="pstsIndicatorColor" format="color" />
        <!--下方 横线颜色-->
        <attr name="pstsUnderlineColor" format="color" />
        <!--水平方向分割线颜色-->
        <attr name="pstsDividerColor" format="color" />
        <!--标题默认颜色-->
        <attr name="pstsTextDefaultColor" format="color" />
        <!--标题选中颜色-->
        <attr name="pstsTextSelectedColor" format="color" />
        <!--字体大小-->
        <attr name="pstsTextSize" format="dimension" />
        <!--是否加粗-->
        <attr name="pstsBold" format="boolean" />
        <!--是否显示顶部横线-->
        <attr name="pstsHasTopLine" format="boolean" />
        <!--是否显示底部横线-->
        <attr name="pstsHasBottomLine" format="boolean" />

        <attr name="pstsDividerPadding" format="dimension" />
        <!--指示器高度-->
        <attr name="pstsIndicatorHeight" format="dimension" />
        <attr name="pstsUnderlineHeight" format="dimension" />
        <attr name="pstsDividerPaddingTopBottom" format="dimension" />
        <attr name="pstsTabPaddingLeftRight" format="dimension" />
        <attr name="pstsScrollOffset" format="dimension" />
        <attr name="pstsShouldExpand" format="boolean" />
        <!--所有文字是否转大写-->
        <attr name="pstsTextAllCaps" format="boolean" />
        <attr name="pstsScaleZoomMax" format="float" />
        <!--滑动是是否平滑滚动-->
        <attr name="pstsSmoothScrollWhenClickTab" format="boolean" />
    </declare-styleable>

    <!--自定义加载框-->
    <declare-styleable name="LVCircularRing">
        <attr name="bgColor" format="color" />
        <attr name="barColor" format="color" />
    </declare-styleable>

    <!--横向多功能View封装-->
    <declare-styleable name="MultipleItemView">
        <attr name="leftTextColor" format="color" />
        <attr name="leftIcon" format="reference" />
        <attr name="rightTextColor" format="color" />
        <attr name="rightIcon" format="reference" />
        <attr name="leftText" format="string" />
        <attr name="rightText" format="string" />
        <attr name="showTopLine" format="boolean" />
        <attr name="showBottomLine" format="boolean" />
        <attr name="showLeftIcon" format="boolean" />
        <attr name="showRightIcon" format="boolean" />
        <attr name="showEdtText" format="boolean" />
    </declare-styleable>

    <!--观察者按钮-->
    <declare-styleable name="ObserverButton">
        <!--默认背景-->
        <attr name="defaultBgColor" format="color|reference" />
        <attr name="defaultBgResource" format="color|reference" />
        <!--可以点击的背景-->
        <attr name="pressBgColor" format="color|reference" />
        <attr name="pressBgResource" format="color|reference" />
        <!--默认字体颜色-->
        <attr name="defaultTextColor" format="color" />
        <!--可以点击的字体颜色-->
        <attr name="pressTextColor" format="color" />
    </declare-styleable>
    <declare-styleable name="ObserverEditText">
        <!--最少输入文字个数-->
        <attr name="minWordNumber" format="integer" />
        <!--参与观察过程-->
        <attr name="join" format="boolean" />
    </declare-styleable>

    <!--流式布局-->
    <declare-styleable name="FlowLayout">
        <attr name="max_select" format="integer" />
        <attr name="tag_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SlideLayout">
        <attr name="percent" format="float" />
        <attr name="duration" format="integer" />
        <attr name="default_panel" format="enum">
            <enum name="front" value="0" />
            <enum name="behind" value="1" />
        </attr>
    </declare-styleable>

    <!--Spinner-->
    <attr name="popupTextAlignment" format="enum">
        <enum name="start" value="0" />
        <enum name="end" value="1" />
        <enum name="center" value="2" />
    </attr>

    <!--Spinner-->
    <declare-styleable name="NiceSpinner">
        <attr name="arrowTint" format="color" />
        <attr name="hideArrow" format="boolean" />
        <attr name="arrowDrawable" format="reference|color" />
        <attr name="dropDownListPaddingBottom" format="dimension" />
        <attr name="backgroundSelector" format="integer" />
        <attr name="textTint" format="color" />
        <attr name="popupTextAlignment" />
        <attr name="entries" format="reference" />
    </declare-styleable>

    <declare-styleable name="EditTextCount">
        <!--设置标题-->
        <attr name="tvTitle" format="string" />
        <!--设置默认文字-->
        <attr name="showSelectIcon" format="boolean" />
        <!--设置默认文字-->
        <attr name="canEdit" format="boolean" />
        <!--设置默认文字-->
        <attr name="etText" format="string" />
        <!--设置提示文字-->
        <attr name="etHint" format="string" />
        <!--设置提示文字颜色-->
        <attr name="etHintColor" format="color" />
        <!--设置最小高度-->
        <attr name="etMinHeight" format="dimension" />
        <!--设置最大长度-->
        <attr name="etMaxLength" format="integer" />
        <!--设置横线颜色-->
        <attr name="etLineColor" format="color" />
        <!--设置输入文字大小-->
        <attr name="etTextSize" format="dimension" />
        <!--设置输入文字颜色-->
        <attr name="etTextColor" format="color" />
        <!--设置提示统计文字大小-->
        <attr name="etPromptTextSize" format="dimension" />
        <!--设置提示统计文字颜色-->
        <attr name="etPromptTextColor" format="color" />
        <!--设置提示统计文字颜色-->
        <attr name="etPromptVisibility" format="integer" />
        <!--设置提示统计显示类型-->
        <attr name="etType">
            <!--单数类型-->
            <enum name="singular" value="0" />
            <!--百分比类型-->
            <enum name="percentage" value="1" />
        </attr>
        <!--设置提示统计显示类型位置-->
        <attr name="etPromptPosition">
            <!--上方-->
            <enum name="promptUp" value="0" />
            <!--下方-->
            <enum name="promptDn" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="ForbidEmojiEditText">
        <attr name="spanFilter" format="boolean" />
        <attr name="maxWordNumber" format="integer" />
    </declare-styleable>
    <declare-styleable name="MaxHeightRecyclerView">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DashBoardView">
        <attr name="insideMargin" format="dimension" />
        <attr name="insideWidth" format="dimension" />
        <attr name="bottomStr" format="string" />
        <attr name="selectValue" format="integer" />
        <attr name="originWidth" format="dimension" />
        <attr name="bgDash" format="reference" />
    </declare-styleable>


    <declare-styleable name="MusicPlayingIcon">
        <attr name="pointer_color" format="color" />
        <attr name="stop_color" format="color" />
        <attr name="pointer_num" format="integer" />
        <attr name="pointer_width" format="dimension" />
        <attr name="pointer_speed" format="integer" />
    </declare-styleable>

    <declare-styleable name="CornerTimeBar">
        <attr name="bar_height" format="dimension" />
        <attr name="touch_target_height" format="dimension" />
        <attr name="ad_marker_width" format="dimension" />
        <attr name="scrubber_enabled_size" format="dimension" />
        <attr name="scrubber_disabled_size" format="dimension" />
        <attr name="bar_conner" format="dimension" />
        <attr name="scrubber_dragged_size" format="dimension" />
        <attr name="scrubber_drawable" format="reference" />
        <attr name="played_color" format="color" />
        <attr name="scrubber_color" format="color" />
        <attr name="buffered_color" format="color" />
        <attr name="unplayed_color" format="color" />
        <attr name="ad_marker_color" format="color" />
        <attr name="played_ad_marker_color" format="color" />
    </declare-styleable>

    <declare-styleable name="VerticalSeekBar">
        <attr name="app_thumb" format="reference" />
    </declare-styleable>

    <declare-styleable name="ArcView">
        <attr name="arcWidth" format="dimension" />
        <attr name="arcColor" format="color" />
        <attr name="arcPercent" format="integer" />
        <attr name="arcBackgroundColor" format="color" />
        <attr name="centerTextSize" format="dimension" />
        <attr name="titleTextSize" format="dimension" />
        <attr name="isGradient" format="boolean" />
        <attr name="isPercent" format="boolean" />
        <attr name="centerText" format="string" />
        <attr name="titleText" format="string" />
        <attr name="leftLabelText" format="string" />
        <attr name="rightLabelText" format="string" />
    </declare-styleable>
    <declare-styleable name="EmptyView">
        <attr name="resId" format="reference" />
        <attr name="text_empty" format="string" />
    </declare-styleable>
</resources>